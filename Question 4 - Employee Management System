
ContractInformation.java
************************


public class ContractInformation{

private String type,whenSigned,expiryDate;

public ContractInformation(String type,String whenSigned,String expiryDate){
 this.type=type;
 this.whenSigned=whenSigned;
 this.expiryDate=expiryDate;
 
}

public String getContractType(){return this.type;}

public String getContractSignedDate(){return this.whenSigned;}

public String getContractExpiryDate(){return this.expiryDate;}


}



